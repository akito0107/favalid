{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "../lib/esm",
    "moduleResolution": "node",
    "declaration": true,
    "lib": ["es6", "es2015.promise"]
  },
  "include": ["../src/**/*"],
  "exclude": ["../node_modules"]
}
